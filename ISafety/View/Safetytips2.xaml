                    <RowDefinition Height="325"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>


                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>
                <Frame BorderColor="Black"  Grid.Row="1" 
                        BackgroundColor="White"
                        />



                <Image Source="back.png" Grid.Row="0"  WidthRequest="25" 
                       HeightRequest="25"
                       HorizontalOptions="Start" 
                       Margin="10,0,0,0"/>
                <Label Grid.Row="0" Text="Road Safety"
                       FontSize="20" FontAttributes="Bold"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="60,0,0,0"/>
                
                
                
                <Label Grid.Row="1" Text="Road Safety" FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Start" VerticalOptions="Start"
                        Margin="20,20,0,0"/>
                <Label Grid.Row="1" Text="Driving" FontSize="20" 
                       
                       HorizontalOptions="Center" VerticalOptions="Start"
                        Margin="40,25,0,0"/>
                <StackLayout Grid.Row="1">
                    <Label Grid.Row="1" Text="1.   OBEY ALL TRAFFIC LAWS AND  LIGHTS" FontSize="14" 
                       HorizontalOptions="Start" VerticalOptions="Start" FontAttributes="Bold"
                       Margin="20,75,0,0"/>
                    <Label Grid.Row="1" Text="      Must always follow the rules of the road" FontSize="14" 
                       HorizontalOptions="Start" VerticalOptions="Start" 
                       Margin="20,0,0,0"/>
