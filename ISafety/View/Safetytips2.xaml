                       HorizontalOptions="Start" VerticalOptions="Start" FontAttributes="Bold"
                       Margin="20,20,0,0"/>
                    <Label Grid.Row="1" Text="      Must always follow the rules of the road" FontSize="14" 
                       HorizontalOptions="Start" VerticalOptions="Start" 
                       Margin="20,0,0,0"/>
                    <Label Grid.Row="1" Text="1.   OBEY ALL TRAFFIC LAWS AND  LIGHTS" FontSize="14" 
                       HorizontalOptions="Start" VerticalOptions="Start" FontAttributes="Bold"
                       Margin="20,20,0,0"/>
                    <Label Grid.Row="1" Text="      Must always follow the rules of the road" FontSize="14" 
                       HorizontalOptions="Start" VerticalOptions="Start" 
                       Margin="20,0,0,0"/>
                </StackLayout>
                <Frame Grid.Row="1" BorderColor="Black" CornerRadius="10" HeightRequest="75" VerticalOptions="End"/>
                <Image HeightRequest="25" WidthRequest="25" Grid.Row="1" Source="analysis.png" 
                       VerticalOptions="End" HorizontalOptions="Start" Margin="20,0,0,20"/>
                <Label Text=" 120 Likes" FontSize="12" FontAttributes="Bold"
                       VerticalOptions="End" HorizontalOptions="Start"
                       Grid.Row="1" Margin="50,0,0,20"/>
                <Image HeightRequest="25" WidthRequest="25" Grid.Row="1" Source="analysis.png" 
                       VerticalOptions="End" HorizontalOptions="Center" Margin="0,0,40,20"/>
                <Label Text="Comments" FontSize="12" FontAttributes="Bold"
                       VerticalOptions="End" HorizontalOptions="Center"
                       Grid.Row="1" Margin="50,0,0,20"/>
                <Image HeightRequest="25" WidthRequest="25" Grid.Row="1" Source="analysis.png" 
                       VerticalOptions="End" HorizontalOptions="End" Margin="0,0,50,20"/>
                <Label Text="Sent" FontSize="12" FontAttributes="Bold"
                       VerticalOptions="End" HorizontalOptions="End"
                       Grid.Row="1" Margin="50,0,20,20"/>

            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>